<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Get all delete buttons with the class 'delete-product-btn'
        var deleteButtons = document.querySelectorAll('.delete-product-btn');
    
        // Attach a click event listener to each delete button
        deleteButtons.forEach(function(button) {
            button.addEventListener('click', function(event) {
                // Prevent the default behavior (navigation to the specified URL)
                event.preventDefault();
    
                // Get the product ID from the 'data-product-id' attribute
                var productId = button.getAttribute('data-product-id');
    
                // Perform your delete function or AJAX request here using the productId
                // For example, you can use fetch to send a DELETE request to the server
                fetch('/product/delete/' + productId, {
                    method: 'DELETE'
                    // Add other options if needed (headers, body, etc.)
                }).then(function(response) {
                    // Handle the response
                    if (response.ok) {
                        // Product deleted successfully, you can update the UI as needed
                        console.log('Product deleted successfully');
                    } else {
                        // Handle the error
                        console.error('Failed to delete product');
                    }
                }).catch(function(error) {
                    // Handle network or other errors
                    console.error('Error:', error);
                });
            });
        });
    });
    </script>
